trigger:
  branches:
    include:
      - main  # Cambia por la rama que prefieras

pool:
  name: Default  # Este es el grupo de agentes que puedes usar; si tienes un grupo específico, pon su nombre aquí
  demands:
    - agent.name -equals MyAgent  # Sustituye 'MyAgent' por el nombre de tu agente auto-hospedado

stages:
  - stage: Build
    jobs:
      - job: Build
        steps:
          - task: UseDotNet@2
            inputs:
              packageType: 'sdk'
              version: '5.x'
              installationPath: $(Agent.ToolsDirectory)/dotnet

          - script: |
              dotnet build
            displayName: 'Build Project'

  - stage: Deploy
    jobs:
      - job: Deploy
        steps:
          - script: |
              echo "Deploying the project"
            displayName: 'Deploy Project'
